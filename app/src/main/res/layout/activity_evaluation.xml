<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

    <include layout="@layout/toolbar"/>
    <include layout="@layout/loading"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/addmore"
        android:layout_margin="10dp"
        android:id="@+id/ivAdd"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvEvaluation"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/linearFilterOuter"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/linearSelectFilter"
                    >
                    <com.mobiweb.ibrahim.agenda.Custom.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ctvSelectedFilter"
                        android:text="All"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/filter"
                        android:layout_gravity="center_vertical"

                        />
                </LinearLayout>

                <android.support.v7.widget.CardView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardFilter"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="3dp" >
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_gravity="center_horizontal"
                           android:gravity="center_horizontal"
                           >
                           <com.mobiweb.ibrahim.agenda.Custom.CustomTextView
                               android:layout_width="wrap_content"
                               android:layout_height="30dp"
                               android:id="@+id/ctvFilterAll"
                               android:text="All"
                               android:layout_gravity="center"
                               android:gravity="center"
                               />

                           <com.mobiweb.ibrahim.agenda.Custom.CustomTextView
                               android:layout_width="wrap_content"
                               android:layout_height="30dp"
                               android:id="@+id/ctvFilterStudent"
                               android:text="Student"
                               android:layout_gravity="center"
                               android:gravity="center"
                               />

                           <com.mobiweb.ibrahim.agenda.Custom.CustomTextView
                               android:layout_width="wrap_content"
                               android:layout_height="30dp"
                               android:id="@+id/ctvFilterDate"
                               android:text="Date"
                               android:layout_gravity="center"
                               android:gravity="center"
                               />

                       </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>