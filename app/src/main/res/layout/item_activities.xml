<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="270dp"
    android:layout_marginTop="10dp"
    >

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:id="@+id/ivActivity"
               android:background="@color/gray_video"
                android:scaleType="centerCrop"
                />

            <com.mobiweb.ibrahim.agenda.Custom.CustomTextViewBoldAr
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ctvTitleAr"
                android:gravity="right"
                android:visibility="gone"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:paddingRight="10dp"
                />

            <com.mobiweb.ibrahim.agenda.Custom.CustomTextViewAr
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:id="@+id/ctvDescriptionAr"
                android:textColor="@color/black"
                android:paddingRight="10dp"
                />

            <com.mobiweb.ibrahim.agenda.Custom.CustomTextViewAr
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:id="@+id/ctvDateAr"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:paddingRight="10dp"
                />



            <com.mobiweb.ibrahim.agenda.Custom.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ctvTitle"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                />

            <com.mobiweb.ibrahim.agenda.Custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/ctvDescription"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                />

            <com.mobiweb.ibrahim.agenda.Custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/ctvDate"
                android:textColor="@color/black"
                android:maxLines="2"
                android:textSize="12sp"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearButtons"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    >
                    <Button
                        android:id="@+id/btEdit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@color/addEditbg"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="Edit Activity"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:id="@+id/linearEditAlbum"
                    >
                    <Button
                        android:id="@+id/btAddEditAlbum"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        android:background="@color/addEditbg"
                        android:gravity="center"
                        android:text="Edit Album"
                        android:textColor="@color/white" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    >
                    <Button
                        android:id="@+id/btDeleteActivity"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"
                        android:background="@color/addEditbg"
                        android:gravity="center"
                        android:text="Delete Activity"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                >
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   android:src="@drawable/arrow_right"
    android:layout_gravity="center"
    />
            </LinearLayout>
        </LinearLayout>



    </android.support.v7.widget.CardView>



</LinearLayout>