<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="300dp"
    >

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
           android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:id="@+id/ivAnnouncement"
                    android:background="@color/gray_video"
                    android:scaleType="centerCrop"
                    />


                <com.mobiweb.ibrahim.agenda.Custom.CustomTextViewBoldAr
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ctvTitleAr"
                    android:gravity="right"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:paddingRight="10dp"
                    />

                <com.mobiweb.ibrahim.agenda.Custom.CustomTextViewAr
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="7dp"
                    android:id="@+id/ctvDescriptionAr"
                    android:textColor="@color/black"
                    android:paddingRight="10dp"
                    />

                <com.mobiweb.ibrahim.agenda.Custom.CustomTextViewAr
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="7dp"
                    android:id="@+id/ctvDateAr"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:textColor="@color/black"
                    android:paddingRight="10dp"
                    />

                <com.mobiweb.ibrahim.agenda.Custom.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ctvTitle"
                    android:layout_marginTop="5dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    />

                <com.mobiweb.ibrahim.agenda.Custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ctvDescription"
                    android:textColor="@color/black"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:paddingLeft="10dp"
                    />

                <com.mobiweb.ibrahim.agenda.Custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ctvDate"

                    android:textColor="@color/black"
                    android:maxLines="2"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:paddingLeft="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="horizontal"
                android:id="@+id/linearButtons"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    >
                    <Button
                        android:id="@+id/btEdit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"

                        android:background="@color/addEditbg"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="Edit Activity"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:id="@+id/linearEditAlbum"
                    >
                    <Button
                        android:id="@+id/btAddEditAlbum"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:background="@color/addEditbg"
                        android:gravity="center"
                        android:text="Edit Album"
                        android:textColor="@color/white" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    >
                    <Button
                        android:id="@+id/btDeleteActivity"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:background="@color/addEditbg"
                        android:gravity="center"
                        android:text="Delete Activity"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>