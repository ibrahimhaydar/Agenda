<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:padding="10dp"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <com.mobiweb.ibrahim.agenda.Custom.CustomTextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ctvTitle"
        android:textColor="@color/black"

        />

    <com.mobiweb.ibrahim.agenda.Custom.CustomTextViewBoldAr
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:visibility="gone"
        android:gravity="right"
        android:id="@+id/ctvTitleAr"
        android:textColor="@color/black"

        />

    <com.mobiweb.ibrahim.agenda.Custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ctvDesc"
        android:layout_marginTop="10dp"

        />


    <com.mobiweb.ibrahim.agenda.Custom.CustomTextViewAr
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ctvDescAr"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_gravity="right"
        android:gravity="right"


        />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>

</LinearLayout>