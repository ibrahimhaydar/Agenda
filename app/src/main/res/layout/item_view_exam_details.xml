<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@drawable/border_table"
    android:layout_height="70dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Break"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:visibility="gone"
    android:background="@color/bgclasses"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/BreakAfter"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/bgclasses"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:id="@+id/linearDetails"
        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/linearTo"
            android:layout_margin="2dp"
            android:background="@color/lightGray"
            >
            <com.mobiweb.ibrahim.agenda.Custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:id="@+id/ctvTo"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="08:00"
                />

        </LinearLayout>
         <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        >

        <com.mobiweb.ibrahim.agenda.Custom.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/ctvDetais"
            android:textColor="@color/black"

            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/linearFrom"
            android:layout_margin="2dp"
            android:background="@color/lightGray"
            >
            <com.mobiweb.ibrahim.agenda.Custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:id="@+id/ctvFrom"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="08:00"
                />

        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/BreakBefore"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/bgclasses"/>

</LinearLayout>



</LinearLayout>